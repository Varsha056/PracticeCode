/*

   1
  12
 123
1234

*/
import java.util.Scanner;
public class Solution {


	public static void main(String[] args) {
	
		Scanner sc = new Scanner(System.in);
		int num = sc.nextInt();

		for(int i = 1; i<=num; i++){
			int n = 1;
			for(int j = 1;j<=num-i;j++){
				System.out.print(" ");
			}
			for(int k=num-i; k<num;k++){
				System.out.print(n);
				n++;
			}
			System.out.println();
		}
		
	}

}
