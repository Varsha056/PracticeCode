/*
   1
  232
 34543
4567654

*/
import java.util.Scanner;

public class Solution {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int num= sc.nextInt();

		for(int i=1;i<=num;i++){
			int n =i;
			for(int j=1;j<=num-i;j++)
				System.out.print(" ");
			for(int k=num-i;k<num;k++){
				System.out.print(n);
				n++;
			}
			n-=2;
			for(int l=1;l<=i-1;l++){
				System.out.print(n);
				n--;
			}
				
			System.out.println();
		}
	}
}
